.name {
  font-size: 28px;
  font-weight: bold;
}

.item-container{
    flex-direction:column;
    display:flex;
    /* margin-bottom:40rpx; */
    margin-left: 0rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    /* border-top: 1px solid #ededed; */
    padding-bottom: 15px;
}

.item-author-date{
    margin-top:10rpx;
    margin-bottom: 20rpx;
    margin-left: 10px;
}

.item-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}

.item-date{
    margin-left: 20px;
    vertical-align: middle;
}

.item-image{
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15px;
}

.item-date{
    font-size:26rpx;
    margin-bottom: 10px;
}

.item-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.item-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}

.item-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
}

.item-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}

.item-like-font{
    vertical-align:middle;
    margin-right: 20px;
}